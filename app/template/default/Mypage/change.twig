{% extends 'default_frame.twig' %}

{% set body_class = 'mypage' %}

{% set mypageno = 'change' %}

{% form_theme form 'Form/form_div_layout.twig' %}

{% block javascript %}
    <script src="//yubinbango.github.io/yubinbango/yubinbango.js" charset="UTF-8"></script>
{% endblock javascript %}

{% block main %}
    <div class="ec-layoutRole__main">
        <div class="ec-mypageRole">
            <div class="ec-pageHeader">
                <h1>お申込者情報変更</h1>
            </div>
            {# {% include 'Mypage/navi.twig' %} #}
        </div>
        <div class="ec-mypageRole">
            <div class="ec-editRole">
                <div class="ec-off1Grid">
                    <div class="ec-off1Grid__cell">
                        <h2>お申込者情報</h2>
                        <p>控除を受けようとされる方のお名前・ご住所で登録をお願いいたします。</p>
                        <form method="post" action="{{ url('mypage_change') }}" novalidate class="h-adr">
                            <span class="p-country-name" style="display:none;">Japan</span>
                            {{ form_widget(form._token) }}
                            <div class="ec-borderedDefs">
                                <dl>
                                    <dt>
                                        お名前　<span>※必須</span>
                                    </dt>
                                    <dd>
                                        <div class="{{ has_errors(form.name.name01, form.name.name02) ? ' error'}}">
                                            <div class="name_name">
                                                <div class="name_name1">
                                                    <label>姓</label>
                                                    {{ form_widget(form.name.name01, { 'attr': { 'placeholder': '例：帆立' } }) }}
                                                </div>
                                                <div class="name_name2">
                                                    <label>名</label>
                                                    {{ form_widget(form.name.name02, { 'attr': { 'placeholder': '例：海驢' } }) }}
                                                </div>
                                            </div>
                                            <div class="name_name">
                                                {{ form_errors(form.name.name01) }}
                                                {{ form_errors(form.name.name02) }}
                                            </div>
                                        </div>
                                    </dd>
                                    <dd>
                                        <div class="{{ has_errors(form.kana.kana01, form.kana.kana02) ? ' error'}}">
                                            <div class="name_kana">
                                                <div class="name_kana1">
                                                    <label>セイ</label>
                                                    {{ form_widget(form.kana.kana01, { 'attr': { 'placeholder': '例：ホタテ' } }) }}
                                                </div>
                                                <div class="name_kana2">
                                                    <label>メイ</label>
                                                    {{ form_widget(form.kana.kana02, { 'attr': { 'placeholder': '例：アシカ' } }) }}
                                                </div>
                                            </div>
                                            <div class="name_kana">
                                                {{ form_errors(form.kana.kana01) }}
                                                {{ form_errors(form.kana.kana02) }}
                                            </div>
                                        </div>
                                    </dd>
                                </dl>
                                <dl style="display:none;">
                                    <dt>
                                        {{ form_label(form.company_name, 'common.company_name', { 'label_attr': { 'class': 'ec-label' } }) }}
                                    </dt>
                                    <dd>
                                        <div class="ec-halfInput{{ has_errors(form.company_name) ? ' error' }}">
                                            {{ form_widget(form.company_name) }}
                                            {{ form_errors(form.company_name) }}
                                        </div>
                                    </dd>
                                </dl>
                                <dl>
                                    <dt>
                                        住所　<span>※必須</span>
                                    </dt>
                                    <dd>
                                        <p>住民票と同一のご住所を記入してください。</p>
                                        <div class="ec-zipInput{{ has_errors(form.postal_code) ? ' error' }}">
                                            <label>郵便番号（ハイフン無し）</label><br>
                                            {{ form_widget(form.postal_code, { 'attr': { 'placeholder': '例：1730123' } }) }}
                                            <div class="ec-zipInputHelp">
                                                <div class="ec-zipInputHelp__icon">
                                                    <div class="ec-icon"><img src="{{ asset('assets/icon/question-white.svg') }}" alt=""></div>
                                                </div>
                                                <a href="https://www.post.japanpost.jp/zipcode/" target="_blank" class="code-search"><span>{{ 'common.search_postal_code'|trans }}</span></a>
                                            </div>
                                            {{ form_errors(form.postal_code) }}
                                        </div>
                                        <div class="ec-select{{ has_errors(form.address.pref) ? ' error' }}">
                                            {{ form_widget(form.address.pref) }}
                                            {{ form_errors(form.address.pref) }}
                                        </div>
                                        <div class="ec-input{{ has_errors(form.address.addr01) ? ' error' }}">
                                            <label>市区町村名</label>
                                            {{ form_widget(form.address.addr01, { 'attr': { 'placeholder': '例：板橋区海洋公園町' } }) }}
                                            {{ form_errors(form.address.addr01) }}
                                        </div>
                                        <div class="ec-input{{ has_errors(form.address.addr02) ? ' error' }}">
                                            <label>番地・ビル名</label>
                                            {{ form_widget(form.address.addr02, { 'attr': { 'placeholder': '例：230-230 ガリンコタワー230' } }) }}
                                            {{ form_errors(form.address.addr02) }}
                                        </div>
                                    </dd>
                                </dl>
                                <dl>
                                    <dt>
                                        電話番号（ハイフン無し）　<span>※必須</span>
                                    </dt>
                                    <dd>
                                        <div class="ec-telInput{{ has_errors(form.phone_number) ? ' error' }}">
                                            {{ form_widget(form.phone_number, { 'attr': { 'placeholder': '例：0302300230' } }) }}
                                            {{ form_errors(form.phone_number) }}
                                        </div>
                                    </dd>
                                </dl>
                                <dl>
                                    <dt>
                                        メールアドレス（ログイン時のユーザーIDとなります。）　<span>※必須</span>
                                    </dt>
                                    <dd>
                                        <div class="ec-input{{ has_errors(form.email.first) ? ' error' }}">
                                            {{ form_widget(form.email.first, { 'attr': { 'placeholder': '例：hotate@ashika.jp' } }) }}
                                            {{ form_errors(form.email.first) }}
                                        </div>
                                        <div>確認用</div>
                                        <div class="ec-input{{ has_errors(form.email.second) ? ' error' }}">
                                            {{ form_widget(form.email.second, { 'attr': { 'placeholder': '確認のため、もう一度入力してください。' } }) }}
                                            {{ form_errors(form.email.second) }}
                                        </div>
                                    </dd>
                                </dl>
                                <dl>
                                    <dt>
                                        パスワード　<span>※必須</span>
                                    </dt>
                                    <dd>
                                        <div class="ec-input{{ has_errors(form.plain_password.first) ? ' error' }}">
                                            <label>半角英数記号8〜32文字</label>
                                            {{ form_widget(form.plain_password.first, {
                                                'attr': { 'placeholder': 'common.password_sample'|trans({ '%min%': eccube_config.eccube_password_min_len, '%max%': eccube_config.eccube_password_max_len }) },
                                                'type': 'password'
                                            }) }}
                                            {{ form_errors(form.plain_password.first) }}
                                        </div>
                                        <div class="ec-input{{ has_errors(form.plain_password.second) ? ' error' }}">
                                            <label>確認用</label>
                                            {{ form_widget(form.plain_password.second, {
                                                'attr': { 'placeholder': 'common.repeated_confirm'|trans },
                                                'type': 'password'
                                            }) }}
                                            {{ form_errors(form.plain_password.second) }}
                                        </div>
                                    </dd>
                                </dl>
                                <dl>
                                    <dt>
                                        生年月日　<span>※必須</span>
                                    </dt>
                                    <dd>
                                        <div class="ec-birth{{ has_errors(form.birth) ? ' error' }}">
                                            {{ form_widget(form.birth.year) }}<span>年</span>
                                            {{ form_widget(form.birth.month) }}<span>月</span>
                                            {{ form_widget(form.birth.day) }}<span>日</span>
                                            {{ form_errors(form.birth) }}
                                        </div>
                                    </dd>
                                </dl>
                                <dl>
                                    <dt>
                                        {{ form_label(form.sex, 'common.gender', { 'label_attr': { 'class': 'ec-label' } }) }}
                                    </dt>
                                    <dd>
                                        <div class="ec-radio{{ has_errors(form.sex) ? ' error' }}">
                                            {{ form_widget(form.sex) }}
                                            {{ form_errors(form.sex) }}
                                        </div>
                                    </dd>
                                </dl>
                                <dl>
                                    <dt>
                                        {{ form_label(form.job, 'common.job', { 'label_attr': {'class': 'ec-label' } }) }}
                                    </dt>
                                    <dd>
                                        <div class="ec-select{{ has_errors(form.job) ? ' error' }}">
                                            {{ form_widget(form.job) }}
                                            {{ form_errors(form.job) }}
                                        </div>
                                    </dd>
                                </dl>

                                {# エンティティ拡張の自動出力 #}
                                {% for f in form|filter(f => f.vars.eccube_form_options.auto_render) %}
                                    {% if f.vars.eccube_form_options.form_theme %}
                                        {% form_theme f f.vars.eccube_form_options.form_theme %}
                                        {{ form_row(f) }}
                                    {% else %}
                                        <dl>
                                            <dt>
                                                {% set label_class = f.vars.label_attr.class is defined ? f.vars.label_attr.class : '' %}
                                                {{ form_label(f, f.vars.label, { 'label_attr': {'class': label_class ~ ' ec-label' } }) }}
                                            </dt>
                                            <dd>
                                                <div class="{{ f.vars.eccube_form_options.style_class }}{{ has_errors(f) ? ' error' }}">
                                                    {{ form_widget(f) }}
                                                    {{ form_errors(f) }}
                                                </div>
                                            </dd>
                                        </dl>
                                    {% endif %}
                                {% endfor %}
                            </div>

                            <div class="ec-RegisterRole__actions">
                                <div class="ec-off4Grid">
                                    <div class="ec-off4Grid__cell">
                                        <button type="submit"
                                                class="ec-blockBtn--action">{{ 'common.registration'|trans }}</button>
                                        <a class="ec-blockBtn--cancel to-back" href="{{ url('mymenu') }}">前の画面に戻る</a>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
